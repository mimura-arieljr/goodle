{
  "compilerOptions": {
    "target": "ES2020",        // Use ES2020 as the target
    "module": "ESNext",        // Use ESNext for the module system (compatible with modern imports/exports)
    "outDir": "./dist",        // Compile output directory
    "rootDir": "./src",        // Source code directory
    "strict": true,            // Enable strict type checking
    "esModuleInterop": true,   // Allow compatibility with ES modules
    "moduleResolution": "node",// Use Node.js module resolution
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*"],     // Include all TS files in src/
  "exclude": ["node_modules"],  // Exclude dependencies
}